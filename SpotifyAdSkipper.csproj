<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>skipify.ico</ApplicationIcon>
    <StartupObject>Skipify.Program</StartupObject>
    <UserSecretsId>dotnet-Skipify-4f9b83bc-f31e-47b3-8ca4-16d5d4b98d89</UserSecretsId>
    <PublishSingleFile>true</PublishSingleFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    
    <!-- Icon and application metadata -->
    <ApplicationIcon>skipify.ico</ApplicationIcon>
    <AssemblyName>Skipify</AssemblyName>
    <Product>Skipify</Product>
    <Description>Automatically skips Spotify advertisements by monitoring window titles for educational purposes</Description>
    <Version>1.0.0</Version>
    <Authors>Adhitya Nadooli</Authors>
    <Company>Skipify</Company>
    <Copyright>Copyright Â© 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="6.0.1" />
  </ItemGroup>
</Project>